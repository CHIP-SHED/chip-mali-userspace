#!/bin/sh

if [[ remove = "$1" || abort-install = "$1" || disappear = "$1" ]]; then

	dpkg-divert --package chip-mali-userspace --remove --rename \
		--divert /usr/lib/arm-linux-gnueabihf/libEGL.so.real\
		/usr/lib/arm-linux-gnueabihf/libEGL.so
